{
    "info": {
        "title": "Air Quality Sensor",
        "version": "2022-09-30",
        "copyright": "Copyright 2022 Ericsson. All rights reserved.",
        "license": "https://ericsson.com/license"
    },
    "namespace": {
        "eri": "https://ericsson.com/namespace"
    },
    "defaultNamespace": "eri",
    "sdfObject": {
        "temperaturesensor": {
            "description": "Measures environmental temperature.",
            "sdfProperty": {
                "temperature": {
                    "description": "Temperature value",
                    "type": "number",
                    "unit": "°C"
                }
            }   
        },
        "humiditysensor": {
            "description": "Measures environmental humidity.",
            "sdfProperty": {
                "humidity": {
                    "description": "Humidity value",
                    "type": "number",
                    "unit": "%"
                }
            }   
        },
        "pressuresensor": {
            "description": "Measures environmental pressure.",
            "sdfProperty": {
                "pressure": {
                    "description": "Pressure value",
                    "type": "number",
                    "unit": "Pa"
                }
            }   
        },
        "airqualitysensor": {
            "description": "Measures pollutants in the air.",
            "sdfProperty": {
                "pm1": {
                    "description": "PM1 (viruses, exhaust gases...) value",
                    "type": "number",
                    "unit": "µg/m^3"
                },
                "pm25": {
                    "description": "PM2.5 (bacteria, spores, pollen, toner dust...) value",
                    "type": "number",
                    "unit": "µg/m^3"
                },
                "pm10": {
                    "description": "PM10 (pollen, desert dust...) value",
                    "type": "number",
                    "unit": "µg/m^3"
                }
            }
        },
        "timecontrol": {
            "description": "Provides data about the device timing.",
            "sdfProperty": {
                "timestamp": {
                    "description": "Moment when the last device report was sent.",
                    "type": "string",
                    "format": "date-time"
                }
            }   
        }
    }
}