    "namespace": {
      "eri": "https://ericsson.com/namespace"
    },
    "defaultNamespace": "eri",
    "sdfObject": {
        "fault_notifier": {
            "description": "Notifies of the need of a repair",
            "sdfProperty": {
                "focus": {
                    "description": "What type of fault is is focused on.",
                    "enum": ["configuration","quality"],
                    "type": "string"
                },
                "alarm": {
                    "description": "Active when a repair is needed.",
                    "type": "bool"
                }
            }   
        },
        "time_control": {
            "description": "Provides data about the device timing.",
            "sdfProperty": {
                "timestamp": {
                    "description": "Moment when the last device report was sent.",
                    "type": "string",
                    "format": "date-time"
                }
            }   
        }
    }
}