{
    "info": {
        "title": "Pose Detector",
        "version": "2022-09-30",
        "copyright": "Copyright 2022 Ericsson. All rights reserved.",
        "license": "https://ericsson.com/license"
    },
    "namespace": {
        "eri": "https://ericsson.com/namespace"
    },
    "defaultNamespace": "eri",
    "sdfObject": {
        "pose_detection_cam": {
            "description": "Detects the pose of an object to allow robotic actuators to act on it precisely (grasping, drilling...)",
            "sdfProperty": {
                "uid": {
                    "description": "Unique module identifier.",
                    "type": "string"
                },
                "object_position": {
                    "description": "Object position (X,Y,Z)",
                    "type": "array",
                    "minItems": 3,
                    "maxItems": 3, 
                    "items": {"type": "double"},
                    "unit": "m"
                },
                "object_orientation": {
                    "description": "Object orientation (Roll X, Pitch Y, Yaw Z)",
                    "type": "array",
                    "minItems": 3,
                    "maxItems": 3, 
                    "items": {"type": "double"},
                    "unit": "degree"
                }
            }   
        },
        "timer": {
            "description": "Provides data about the device timing.",
            "sdfProperty": {
                "uid": {
                    "description": "Unique module identifier.",
                    "type": "string"
                },
                "timestamp": {
                    "description": "Moment when the last device report was sent.",
                    "type": "datetime"
                }
            }   
        }
    }
}